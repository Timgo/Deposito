<h1>Editing pedido</h1>

<% form_for(@pedido) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :endereço %><br />
    <%= f.text_area :endereço %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :tipo_de_pagamento %><br />
    <%= f.text_field :tipo_de_pagamento %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @pedido %> |
<%= link_to 'Back', pedidos_path %>